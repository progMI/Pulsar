name: Build Windows App

on:
  push:
    branches: [ main ]

jobs:
  build:
    runs-on: windows-latest

    steps:
      - uses: actions/checkout@v3
      - uses: actions/setup-node@v3
        with:
          node-version: 18

      - run: npm install
      - run: npm run build
      - run: npm install electron electron-builder --save-dev

      - run: |
          echo const { app, BrowserWindow } = require('electron'); > electron.js
          echo function createWindow(){const win=new BrowserWindow({width:1200,height:800});win.loadFile('dist/index.html');} >> electron.js
          echo app.whenReady().then(createWindow); >> electron.js

      - run: |
          node -e "let p=require('./package.json');p.main='electron.js';p.build={appId:'com.pulse.messenger',productName:'Pulse Messenger',files:['dist/**/*','electron.js'],win:{target:'nsis'}};require('fs').writeFileSync('package.json',JSON.stringify(p,null,2));"

      - run: npx electron-builder --win

      - uses: actions/upload-artifact@v3
        with:
          name: installer
          path: dist/*.exe
